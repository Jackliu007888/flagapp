html, body
  height 100%
  width 100%
  font-size 20px
  -webkit-overflow-scrolling : touch;
  #app
    width 100%
    height 100%

.weui-loading_toast.vux-loading
  font-size 16px

.weui-dialog__btn.weui-dialog__btn_default, .weui-dialog__btn_primary
  font-size 0.7rem

body
  & > .v-transfer-dom,
  & > .vux-popup-radio,
  & > .vux-popup-picker,
  & > .vux-calendar,
  & > .vux-x-input,
  & > .vux-confirm,
  & > .vux-toast,
  & > .vux-loading,
  & > .vux-alert
    font-size 0.8rem